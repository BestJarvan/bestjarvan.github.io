{
  "name": "hexo-theme-stun",
  "version": "2.6.2",
  "description": "A beautiful & simple theme for Hexo",
  "homepage": "https://liuyib.github.io",
  "scripts": {
    "commit": "git cz",
    "build": "hexo clean && hexo g && hexo deploy",
    "release": "standard-version",
    "release:lts": "npm run release -- --release-as",
    "release:pre": "npm run release -- --prerelease",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liuyib/hexo-theme-stun"
  },
  "keywords": [
    "Stun",
    "Hexo"
  ],
  "author": "liuyib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liuyib/hexo-theme-stun/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.17.0",
    "husky": "^4.3.6",
    "hexo-fs": "^4.1.1",
    "standard": "^14.3.4",
    "standard-version": "^9.1.0"
  },
  "standard": {
    "globals": [
      "$",
      "CONFIG",
      "hexo",
      "Stun",
      "instantsearch"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  }
}
